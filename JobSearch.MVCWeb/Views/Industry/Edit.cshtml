@model JobSearch.MVCWeb.Models.Industry

@{
    ViewBag.Title = "Edit Industry";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit Industry</legend>

        @Html.HiddenFor(model => model.IndustryId)

        <div class="editor-label">
            @Html.LabelFor(model => model.IndustryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IndustryName)
            @Html.ValidationMessageFor(model => model.IndustryName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
